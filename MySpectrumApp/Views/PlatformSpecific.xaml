<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MySpectrumApp.Views.PlatformSpecific"
             Title="{Binding Title}">
    
    <ContentPage.Content>
        <StackLayout Padding="20">
            <StackLayout VerticalOptions="Start" HorizontalOptions="StartAndExpand">
                <Label Text="Device Model:" />
                <Label Text="{Binding Description}" FontSize="Small" FontAttributes="Bold"/>
                
            </StackLayout>

            <StackLayout VerticalOptions="Start" HorizontalOptions="StartAndExpand">
                <Label Text="Operating System Version:" />
                <Label Text="{Binding Version}" FontSize="Small" FontAttributes="Bold"/>
                <!--
                <ContentView Padding="50, 0, 0, 0">
                    <Label Text="{Binding Version}"
                       FontSize="Large"
                       FontAttributes="Bold" />                   
                </ContentView>
                -->
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>